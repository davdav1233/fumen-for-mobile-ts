{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2015"
    ],
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
      "@hyperapp/*": ["node_modules/*", "mytypes/@hyperapp/*"]
    },
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "h",
    "target": "esnext",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "allowUnreachableCode": false,  // 到達できないコード
    "allowUnusedLabels": false,  // 到達できないラベル
    "noImplicitReturns": true,  // すべてのケースで戻り値を返す
    //        "noUnusedLocals": true, // 未使用変数
    //        "noUnusedParameters": true,   // 未使用引数
    "pretty": true,  // エラーの表示を色付きにする
    "noEmitHelpers": true,  // ヘルパ関数のglobal化
    "importHelpers": true,  // ヘルパ関数としてtslibをimport
    "esModuleInterop": true  // import * + 関数呼び出し をエラーにする
  }
}